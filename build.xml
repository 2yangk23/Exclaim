<project default="compile">

  <!-- build.xml for Exclaim-->

  <target name="compile" description="compile my code">
    <mkdir dir="build" />
    <javac srcdir="src" destdir="build" debug="true" debuglevel="lines,source" includeantruntime="false" />
  </target>

  <target name="clean" description="delete unnecessary files and directories">
    <delete dir="build" failonerror="false" verbose="true" />
    <mkdir dir="build" />
  </target>

  <target name="run" depends="compile" 
    description="run Exclaim chat client">
    <java classpath="build" classname="user.Program" />
  </target>
</project>
